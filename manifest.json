{
  "manifest_version": 3,
  "name": "Org Capture",
  "version": "1.0.0",
  "description": "Capture web page via org-protocol.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Org Capture"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Capture Page"
    }
  }
}
